<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ClientJobApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="JobItemTextPrimary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="JobItemTextSecondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/material_dynamic_secondary0</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- El fondo de la splash screen -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- El ícono (tu logo) que aparecerá en el centro -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>

        <!-- La duración del ícono en pantalla (opcional) -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- El tema que se aplicará después de que la splash screen termine -->
        <item name="postSplashScreenTheme">@style/Theme.ClientJobApp</item>
    </style>
</resources>
